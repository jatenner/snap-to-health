# OpenAI API key 
OPENAI_API_KEY=your-openai-api-key

# OpenAI API Configuration
# Adjust these values to control model behavior
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.2
OPENAI_TIMEOUT_MS=30000

# OCR Configuration
USE_OCR_EXTRACTION=true
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_SEGMENTATION_ENABLED=true
OCR_PROVIDER=google-vision

# Google Cloud Vision API Configuration
# PRIORITY ORDER:
# 1. GOOGLE_VISION_PRIVATE_KEY_BASE64 (Preferred, especially for Vercel deployment)
# 2. GOOGLE_APPLICATION_CREDENTIALS (Fallback, better for local development)

# Option 1 (PREFERRED): Base64 encoded credentials for deployment
# Generate with: cat /path/to/service-account.json | base64
GOOGLE_VISION_PRIVATE_KEY_BASE64=YOUR_BASE64_ENCODED_SERVICE_ACCOUNT_JSON

# Option 2 (FALLBACK): Path to credentials file (for local development)
# GOOGLE_APPLICATION_CREDENTIALS=./keys/your-service-account-file.json

# Vision Configuration
